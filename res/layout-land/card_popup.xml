<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivCardImages"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ivCardImages"
        android:layout_marginBottom="@dimen/card_name_bottom_padding"
        android:layout_marginLeft="@dimen/card_name_padding"
        android:layout_marginRight="@dimen/card_name_padding"
        android:layout_marginTop="@dimen/card_name_top_padding"
        android:gravity="center"
        android:paddingLeft="@dimen/card_icon_padding_left"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/card_list_textview" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvClass"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="Ability/Minion"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_list_textview" />

    <TextView
        android:id="@+id/tvQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvType"
        android:layout_below="@+id/tvType"
        android:text="QualityType"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_list_textview" />

    <ImageView
        android:id="@+id/ivCardImages"
        android:layout_width="@dimen/card_icon_width"
        android:layout_height="@dimen/card_icon"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvCardName"
        android:layout_marginRight="@dimen/card_icon_padding_right"
        android:paddingLeft="@dimen/card_icon_padding_left"
        android:src="@drawable/cards" />

    <TextView
        android:id="@+id/tvSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvQuality"
        android:layout_alignBottom="@+id/tvQuality"
        android:layout_alignLeft="@+id/tvClass"
        android:text="Set"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_list_textview" />

    <TextView
        android:id="@+id/tvCrafted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Crafted"
        android:textColor="@color/white"
        android:textSize="@dimen/card_list_textview" />

    <TextView
        android:id="@+id/tvClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCardName"
        android:layout_marginTop="@dimen/class_name_top_padding"
        android:layout_toRightOf="@+id/ivCardImages"
        android:text="Class"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_list_textview" />

</RelativeLayout>
