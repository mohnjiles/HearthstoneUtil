<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <TextView
        android:id="@+id/tvNumCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:text="x 2"
        android:textSize="@dimen/arena_text" />

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:padding="2dip" >

        <ImageView
            android:id="@+id/ivClassImage"
            android:layout_width="@dimen/card_class_size"
            android:layout_height="@dimen/card_class_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="30"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_stats_text_size" />

    <TextView
        android:id="@+id/tvAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView1"
        android:gravity="center"
        android:text="30"
        android:paddingLeft="4dp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_stats_text_size" />

    <ImageView
        android:id="@+id/ivItem1"
        android:layout_width="@dimen/card_stats_image_size"
        android:layout_height="@dimen/card_stats_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="4dp"
        android:layout_toLeftOf="@+id/tvAttack"
        android:src="@drawable/attack" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/card_stats_image_size"
        android:layout_height="@dimen/card_stats_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="4dp"
        android:layout_toLeftOf="@+id/tvHealth"
        android:src="@drawable/health" />

    <TextView
        android:id="@+id/tvMana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ivItem1"
        android:paddingLeft="4dp"
        android:gravity="center"
        android:text="30"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_stats_text_size" />

    <ImageView
        android:id="@+id/ivItem2"
        android:layout_width="@dimen/card_stats_image_size"
        android:layout_height="@dimen/card_stats_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvMana"
        android:paddingLeft="4dp"
        android:src="@drawable/mana_crystal" />

    <TextView
        android:id="@+id/tvDeckName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingLeft="4dp"
        android:gravity="left"
        android:text="Al&apos;Akir the Windlord"
        android:textColor="#000000"
        android:textSize="@dimen/card_name_text_size" />

</RelativeLayout>