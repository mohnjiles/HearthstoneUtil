<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#666666" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="462dp" >

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Hero Power"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/ivHeroPower"
            android:layout_width="186dp"
            android:layout_height="275dp"
            android:layout_below="@+id/tvCardName"
            android:layout_centerHorizontal="true"
            android:src="@drawable/abc_ab_solid_dark_holo" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ivHeroPower"
            android:layout_marginLeft="16dp"
            android:text="Cards Earned by Leveling"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView01" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

				<ImageView
		            android:id="@+id/ivFreeCardOne"
		            android:layout_width="144dp"
		            android:layout_height="206dp"
		            android:src="@drawable/abc_ab_solid_dark_holo" />

				<ImageView
				    android:id="@+id/ivFreeCardTwo"
				    android:layout_width="144dp"
				    android:layout_height="206dp"
				    android:layout_marginLeft="8dp"
				    android:src="@drawable/abc_ab_solid_dark_holo" />

				<ImageView
		            android:id="@+id/ivFreeCardThree"
		            android:layout_width="144dp"
		            android:layout_height="206dp"
		            android:layout_marginLeft="8dp"
		            android:src="@drawable/abc_ab_solid_dark_holo" />
				<ImageView
		            android:id="@+id/ivFreeCardFour"
		            android:layout_width="144dp"
		            android:layout_height="206dp"
		            android:layout_marginLeft="8dp"
		            android:src="@drawable/abc_ab_solid_dark_holo" />
				<ImageView
		            android:id="@+id/ivFreeCardFive"
		            android:layout_width="144dp"
		            android:layout_height="206dp"
		            android:layout_marginLeft="8dp"
		            android:src="@drawable/abc_ab_solid_dark_holo" />		
                
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</ScrollView>