<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <TextView
        android:id="@+id/tvCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="center"
        android:text="Al&apos;Akir the Windlord"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_name_text_size" />

    <TextView
        android:id="@+id/tvHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="30"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_stats_text_size" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/card_stats_image_size"
        android:layout_height="@dimen/card_stats_image_size"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvHealth"
        android:src="@drawable/health" />

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:orientation="horizontal"
        android:padding="2dip" >

        <ImageView
            android:id="@+id/ivClassImage"
            android:layout_width="@dimen/card_class_size"
            android:layout_height="@dimen/card_class_size"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:gravity="center"
        android:text="30"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_stats_text_size" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="@dimen/card_stats_image_size"
        android:layout_height="@dimen/card_stats_image_size"
        android:layout_alignTop="@+id/tvAttack"
        android:layout_centerVertical="true"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/tvAttack"
        android:src="@drawable/attack" />

    <TextView
        android:id="@+id/tvMana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView01"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:gravity="center"
        android:text="30"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/card_stats_text_size" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="@dimen/card_stats_image_size"
        android:layout_height="@dimen/card_stats_image_size"
        android:layout_alignTop="@+id/tvMana"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvMana"
        android:src="@drawable/mana_crystal" />

</RelativeLayout>